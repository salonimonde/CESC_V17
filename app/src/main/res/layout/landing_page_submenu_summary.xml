<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main.framelayout.title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center_horizontal"
    android:background="#00ffffff"
    android:orientation="vertical"
    app:layout_collapseMode="parallax"
    app:layout_collapseParallaxMultiplier="0.3"
    tools:showIn="@layout/activity_landing">

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/routes"
                    android:layout_gravity="center"
                    android:background="@drawable/ripple_oval_maroon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textSize="@dimen/text_size_h5_1"
                    android:padding="0dp"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/tv_routes"
                    android:textSize="@dimen/text_size_h5"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/binders"
                    android:textColor="@android:color/white"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/total_summary"
                    android:layout_gravity="center"
                    android:background="@drawable/ripple_oval_maroon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="0dp"
                    android:textSize="@dimen/text_size_h5_1"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/tv_total_summary"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/margin_small"
                    android:textSize="@dimen/text_size_h5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/total"
                    android:textColor="@android:color/white"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:background="@color/colorMaroon" />

            <RelativeLayout
                android:paddingLeft="@dimen/margin_medium"
                android:paddingRight="@dimen/margin_medium"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:orientation="horizontal"
                    android:id="@+id/vDottedLine"
                    android:background="@color/colorMaroon"
                    android:layout_width="60dp"
                    android:layout_height="2dp"
                    android:layerType="software"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="25dp" />

                <LinearLayout
                    android:layout_alignParentLeft="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="80dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/open_summary"
                        android:layout_gravity="center"
                        android:background="@drawable/ripple_oval_black"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="0dp"
                        android:textSize="@dimen/text_size_h5_1"
                        android:scaleType="centerInside" />

                    <TextView
                        android:id="@+id/tv_open_summary"
                        android:layout_marginTop="@dimen/margin_small"
                        android:textSize="@dimen/text_size_h5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/open"
                        android:textColor="@android:color/white"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="60dp"
                    android:id="@+id/linearLayout">

                    <Button
                        android:id="@+id/completed"
                        android:layout_gravity="center"
                        android:background="@drawable/ripple_oval_black"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="0dp"
                        android:textSize="@dimen/text_size_h5_1"
                        android:scaleType="centerInside" />

                    <TextView
                        android:id="@+id/tv_completed_symmary"
                        android:layout_marginTop="@dimen/margin_small"
                        android:textSize="@dimen/text_size_h5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/completed"
                        android:textColor="@android:color/white"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>